{% extends reg_get('output.base_tpl') %}
{% block content %}
    <article class="content-entity" data-model="{{ entity.model }}" data-entity-id="{{ entity.id }}">
        <h1>{{ entity.title | e }}</h1>
        {% if entity.images %}
            <div class="image">
                {{ entity.images[0].get_responsive_html(entity.title) }}
            </div>
        {% endif %}
        {% block meta %}
            <div class="meta">
                <span class="author">
                    <i class="fa fa-user"></i>&nbsp;
                    <a href="{{ ep_url('pytsite.content.ep.index', {'model': 'article', 'author': entity.author.nickname}) }}">{{ entity.author.full_name }}</a>
                </span>
                <span class="date"><i
                        class="fa fa-calendar"></i>&nbsp;{{ entity.publish_time | date('pretty_date_time') }}</span>
                <span class="views_count"><i class="fa fa-eye"></i>&nbsp;{{ entity.views_count }}</span>
                <span class="comments_count"><i class="fa fa-comment"></i>&nbsp;{{ entity.comments_count }}</span>
            </div>
        {% endblock %}

        {% block description %}
            <p class="description">
                {{ entity.description | e }}
            </p>
        {% endblock %}

        <div class="body">
            {{ entity.body }}
        </div>

        {% if entity.ext_links %}
            <div class="ext-links">
                <span>{{ t('external_links') }}</span>:
                {% for link in entity.ext_links %}
                    <a target="_blank" href="{{ link }}">{{ t('link')|lower }}</a>
                {% endfor %}
            </div>
        {% endif %}


        {% set current_user = get_current_user() %}
        {% if current_user.has_permission('pytsite.odm_ui.modify.' ~ entity.model) or (current_user.has_permission('pytsite.odm_ui.modify_own.' ~ entity.model) and current_user.id == entity.author.id) %}
            <div class="row actions">
                <div class="col-xs-12 text-right">
                    <a href="{{ ep_url('pytsite.odm_ui.ep.get_m_form', {'model': entity.model, 'id': entity.id|string, '__redirect': current_url()}) }}"
                       class="btn btn-default">{{ t('edit') }}</a>
                </div>
            </div>
        {% endif %}

        <div class="row">
            {% block tags %}
                <div class="tags col-sm-6">
                    {{ entity_tags }}
                </div>
            {% endblock %}

            {% block share %}
                {% if reg_get('add_this.pub_id') %}
                    <div class="share col-sm-6">
                        {{ share_widget }}
                    </div>
                {% endif %}
            {% endblock %}
        </div>

        {% if related %}
            <div class="hr1"></div>

            <div class="row related">
                <div class="col-xs-12">
                    <h3>{{ t('recommended_articles') }}</h3>
                </div>
                {% for rel in related %}
                    <div class="col-xs-B-12 col-xs-6 col-sm-4">
                        <div class="image">
                            {% if rel.images %}
                                <div class="image">
                                    <a href="{{ rel.url }}">
                                        {{ rel.images[0].get_responsive_html(rel.title, aspect_ratio=1.5) }}
                                    </a>
                                </div>
                            {% endif %}
                        </div>

                        <h4 class="title"><a href="{{ rel.url }}">{{ rel.title | e }}</a></h4>
                    </div>
                {% endfor %}
            </div>

            <div class="hr2"></div>
        {% endif %}

        {% block comments %}
            <div id="comments">
                {{ comments_widget }}
            </div>
        {% endblock %}
    </article>
{% endblock %}
