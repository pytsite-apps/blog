<div class="navbar navbar-bottom">
    <div class="container">
        <ul class="nav navbar-nav">
            {% set fb_link = reg_get('app.links.facebook') %}
            {% if fb_link %}
                <li><a target="_blank" href="{{ fb_link }}"><i class="fa fa-facebook"></i></a></li>
            {% endif %}

            {% set tw_link = reg_get('app.links.twitter') %}
            {% if tw_link %}
                <li><a target="_blank" href="{{ tw_link }}"><i class="fa fa-twitter"></i></a></li>
            {% endif %}

            {% set g_link = reg_get('app.links.google_plus') %}
            {% if g_link %}
                <li><a target="_blank" href="{{ g_link }}"><i class="fa fa-google-plus"></i></a></li>
            {% endif %}

            {% for page in pages %}
                {{ nav_link(page.url, page.title) }}
            {% endfor %}
        </ul>

        {{ language_nav }}

        <p class="navbar-text navbar-right">
            <small>&copy; {{ '' | date('%Y') }} {{ t('app_name') }}</small>
        </p>
    </div>
</div>
