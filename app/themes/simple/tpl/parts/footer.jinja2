<div id="page-footer">
    <div class="navbar navbar-inverse">
        <div class="container">
            <ul class="nav navbar-nav">
                {% for link in reg_get('app.links', ()) %}
                    {% set icon = 'fa fa-globe' %}
                    {% if 'facebook.com' in link %}
                        {% set icon = 'fa fa-facebook' %}
                    {% elif 'twitter.com' in link %}
                        {% set icon = 'fa fa-twitter' %}
                    {% elif 'google.com' in link %}
                        {% set icon = 'fa fa-google-plus' %}
                    {% elif 'tumblr.com' in link %}
                        {% set icon = 'fa fa-tumblr' %}
                    {% elif '@' in link %}
                        {% set icon = 'fa fa-envelope' %}
                        {% set link = 'mailto:' ~ link %}
                    {% endif %}
                    <li><a target="_blank" href="{{ link }}"><i class="{{ icon }}"></i></a></li>
                {% endfor %}

                {% for page in pages %}
                    {{ nav_link(page.url, page.title) }}
                {% endfor %}
            </ul>

            {{ language_nav }}

            <p class="navbar-text navbar-right">
                {% set current_year = '' | date('%Y') %}
                <small>&copy; {{ current_year }} {{ t('app_name') }}</small>
            </p>
        </div>
    </div>
</div>
